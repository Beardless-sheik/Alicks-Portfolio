{
  "env": {
    "browser": true,
    "es6": true,
    "jest": true
  },
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "requireConfigFile": false,
    "babelOptions": {
      "parserOpts": {
        "plugins": ["importAssertions"]
      },
      "babelrc": false,
      "configFile": false
    }
  },
  "extends": ["airbnb-base"],
  "rules": {
    "no-shadow": "off",
    "no-param-reassign": "off",
    "eol-last": "off",
    "import/extensions": [0, { "<js>": "always" }]
  },
  "ignorePatterns": ["dist/", "build/"]
}